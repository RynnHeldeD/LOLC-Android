<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gold_border_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_low_margin"
        android:layout_marginRight="@dimen/activity_horizontal_low_margin"
        android:background="@drawable/dialog_titles"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="8"
        android:text="@string/lol_policy_title"
        android:textColor="@color/black_font"
        android:textSize="@dimen/about_font_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dialog_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_low_margin"
            android:layout_marginRight="@dimen/activity_horizontal_low_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/lol_policy"
                android:textColor="@color/black_font"
                android:textSize="@dimen/about_font" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>